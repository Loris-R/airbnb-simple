<div class="container">
  <h1>Flats</h1>

  <ol class="list-group list-group-numbered">
    <% @flats.each do |flat| %>
      <%= link_to toto_path(flat['id']) do %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold"><%= flat['name'] %></div>
            Joli appartement en centre ville
          </div>
          <span class="badge bg-primary rounded-pill"><%= flat['price'] %> <%= flat['priceCurrency'] %></span>
        </li>
      <% end %>
    <% end %>
  </ol>
</div>
